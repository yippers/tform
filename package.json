{
  "name": "tform",
  "version": "1.0.0",
  "description": "Generalized record transformation framework",
  "main": "build/index.js",
  "license": "Apache-2.0",
  "repository": "github:rimeto/tform",
  "scripts": {
    "clean": "rm -rf build node_modules",
    "build": "tsc",
    "lint": "tslint -c ./tslint.json src/**/*.ts",
    "precommit": "lint-staged",
    "test": "jest",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "husky": "^0.14.3",
    "jest": "^22.0.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "collectCoverage": false,
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "roots": [
      "src/"
    ],
    "testRegex": "/__tests__/.*$",
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint -c ./tslint.json --fix",
        "git add"
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@types/lodash": "^4.14.92",
    "lodash": "^4.17.4"
  }
}
